USE="${USE} clang llvm-libunwind"

CC="clang"
CXX="clang++"
AR="llvm-ar"
NM="llvm-nm"
RANLIB="llvm-ranlib"

COMMON_FLAGS="-march=native -O3 -pipe -flto=thin"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
LDFLAGS="-Wl,-O2 -Wl,--as-needed -fuse-ld=lld -march=native -flto=thin -rtlib=compiler-rt -unwindlib=libunwind"
#-stdlib=libc++

CMAKE_EXTRA_CACHE_FILE="/etc/portage/env/llvm_cmake"