USE="${USE} lto"

CC="gcc"
CXX="g++"
AR="gcc-ar"
NM="gcc-nm"
RANLIB="gcc-ranlib"

# -flto or -fwhopr
COMMON_FLAGS="${CFLAGS_PRE} -march=native -O3 -pipe -flto=${LTO_JOBS} -fuse-linker-plugin"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

LDFLAGS="-Wl,-O2 -Wl,--as-needed -fuse-linker-plugin -march=native -flto=${LTO_JOBS}"

CMAKE_EXTRA_CACHE_FILE="/etc/portage/env/llvm_cmake"